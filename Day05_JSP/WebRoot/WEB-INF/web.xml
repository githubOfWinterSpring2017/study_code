<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ServletCookie</servlet-name>
    <servlet-class>com.cqut.edn.cookies.ServletCookie</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ServletShowBook</servlet-name>
    <servlet-class>com.cqut.edn.cookies.ServletShowBook</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ServletBookDetail</servlet-name>
    <servlet-class>com.cqut.edn.cookies.ServletBookDetail</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>ServletCookie</servlet-name>
    <url-pattern>/servlet/ServletCookie</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletShowBook</servlet-name>
    <url-pattern>/servlet/ServletShowBook</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletBookDetail</servlet-name>
    <url-pattern>/servlet/ServletBookDetail</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
